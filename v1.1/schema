	<!--Prisma4 (0000) -->
	<xsd:element name="Prisma4">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="pr4:Item" minOccurs="0" maxOccurs="unbounded"/>
				<xsd:element ref="pr4:Manufacturer" minOccurs="0" maxOccurs="unbounded"/>
				<xsd:element ref="pr4:Supplier" minOccurs="0" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<!--Artículo (0100) -->
	<xsd:complexType name="Item">
		<xsd:sequence>
			<xsd:element name="itemID" minOccurs="1">
				<xsd:annotation>
					<xsd:documentation>Código interno propio y único del ítem, cuando no dispone de GTIN. Obligatorio para todos los ítems sin GTIN. Se recomienda un código numérico secuencial de exactamente 8 dígitos (del 0 al 9), idéntico al número que contiene el atributo ItemID</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="\d{8}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="gtin" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Código GTIN del GS1 (8, 12, 13 o 14 dígitos). Opcional: solo para Artículos que sí lo tienen</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="\d{14}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="itemName" minOccurs="1">
				<xsd:annotation>
					<xsd:documentation>Denominación o nombre principal del Artículo. Obligatorio</xsd:documentation>
				</xsd:annotation>
				<xsd:complexType>
					<xsd:simpleContent>
						<xsd:extension base="xsd:string">
							<xsd:attribute ref="pr4:language"/>
						</xsd:extension>
					</xsd:simpleContent>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="itemDescription" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Breve descripción del ítem, artículo o producto</xsd:documentation>
				</xsd:annotation>
				<xsd:complexType>
					<xsd:simpleContent>
						<xsd:extension base="xsd:string">
							<xsd:attribute ref="pr4:language"/>
						</xsd:extension>
					</xsd:simpleContent>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="itemFamilyCode">
				<xsd:annotation>
					<xsd:documentation>Clasificación del Artículo por código que especifica una categoría de producto según el estándar Global Product Classification (GPC) del GS1</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="\d{8}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="itemFamilyName">
				<xsd:annotation>
					<xsd:documentation>Texto con el nombre asociado a un código de categoría de producto, según el estándar Global Product Classification (GPC) del GS1.</xsd:documentation>
				</xsd:annotation>
				<xsd:complexType>
					<xsd:simpleContent>
						<xsd:extension base="xsd:string">
							<xsd:attribute ref="pr4:language"/>
						</xsd:extension>
					</xsd:simpleContent>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="isRotating" type="xsd:boolean">
				<xsd:annotation>
					<xsd:documentation>Un indicador de que el Artículo o ítem es serializable (1) o no (0)</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="serialNumber" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Número de serie del ítem, en caso de que se requiera. Solo aplicable a máquinas o equipos, cuando 'isRotating' tiene el valor '1'</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:maxLength value="50"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="image" type="xsd:anyURI" minOccurs="0" maxOccurs="3">
				<xsd:annotation>
					<xsd:documentation>Una imagen digital del Artículo.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="addDocuments" type="xsd:anyURI" minOccurs="0" maxOccurs="5">
				<xsd:annotation>
					<xsd:documentation>Un documento digital con información del Artículo.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="storeUnit">
				<xsd:annotation>
					<xsd:documentation>Unidad de almacenamiento o consumo del Artículo, siguiendo la Recomendación Nº 20 de la UN/ECE, sobre codificación de unidades de medida utilizadas en el comercio internacional.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:maxLength value="3"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="manufacturerID">
				<xsd:annotation>
					<xsd:documentation>Código de identificación asociado a un Fabricante. Obligatorio.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="MT\d{6}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="manufacturerItemReference">
				<xsd:annotation>
					<xsd:documentation>Referencia interna propia del Fabricante del Artículo. Obligatorio, si existe.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:maxLength value="30"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="supplierID">
				<xsd:annotation>
					<xsd:documentation>Código de identificación asociado a un Proveedor. Obligatorio.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="SP\d{6}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="supplierItemReference">
				<xsd:annotation>
					<xsd:documentation>Referencia interna propia del Proveedor del Artículo. Obligatorio, si existe.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:maxLength value="30"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="stdCost" type="xsd:decimal">
				<xsd:annotation>
					<xsd:documentation>Número o cifra que representa el coste del Artículo. Obligatorio.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="costCurrency" type="xsd:string" default="EUR">
				<xsd:annotation>
					<xsd:documentation>Moneda base en la que se indica el precio o coste del Artículo.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="Item">
		<xsd:annotation>
			<xsd:documentation>Elemento que contiene los Artículos o ítems del almacén. Cada entidad Item sigue el esquema definido por la extensión pr4:Item</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="pr4:Item"/>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<!-- Fabricante (0200) -->
	<xsd:complexType name="Manufacturer">
		<xsd:sequence>
			<xsd:element name="manufacturerID">
				<xsd:annotation>
					<xsd:documentation>Código de identificación asociado a un Fabricante.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="MT\d{6}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="manufacturerGLN" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Código GLN (Global Locator Number) asociado a un Fabricante.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="\d{13}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="manufacturerName">
				<xsd:annotation>
					<xsd:documentation>Nombre del Fabricante que produce el Artículo o material, expresado en texto.</xsd:documentation>
				</xsd:annotation>
				<xsd:complexType>
					<xsd:attribute ref="pr4:language"/>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="Manufacturer">
		<xsd:annotation>
			<xsd:documentation>Elemento que contiene los Faricantes de los Artículos o ítems del almacén. Cada entidad Manufacturer sigue el esquema definido por la extensión pr4:Manufacturer</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="pr4:Manufacturer"/>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<!-- Proveedor (0300) -->
	<xsd:complexType name="Supplier">
		<xsd:sequence>
			<xsd:element name="supplierID">
				<xsd:annotation>
					<xsd:documentation>Código de identificación asociado a un Proveedor.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="SP\d{6}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="supplierGLN" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Código GLN (Global Locator Number) asociado a un Proveedor.</xsd:documentation>
				</xsd:annotation>
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="\d{13}"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="supllierName">
				<xsd:annotation>
					<xsd:documentation>Nombre del Proveedor que suministra el Artículo o material, expresado en texto.</xsd:documentation>
				</xsd:annotation>
				<xsd:complexType>
					<xsd:attribute ref="pr4:language"/>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="Supplier">
		<xsd:annotation>
			<xsd:documentation>Elemento que contiene los Proveedores de los Artículos o ítems del almacén. Cada entidad Supplier sigue el esquema definido por la extensión pr4:Supplier</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="pr4:Supplier"/>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<xsd:attribute name="language">
		<xsd:annotation>
			<xsd:documentation>Código ISO 639:2023 y ISO 3166-1:2020</xsd:documentation>
		</xsd:annotation>
		<xsd:simpleType>
			<xsd:restriction base="xsd:language"/>
		</xsd:simpleType>
	</xsd:attribute>
